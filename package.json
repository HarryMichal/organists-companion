{
  "name": "companion-server",
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "start": "node ./bin/www.js",
    "dev": "concurrently -i 'NODE_ENV=development nodemon ./bin/www.js' 'cd react-client && npm start'",
    "production-full": "npm install --only=prod && cd react-client && npm install --only=prod --no-shinkwrap && npm run build && cd .. && NODE_ENV=production npm start",
    "production-mini": "NODE_ENV=production npm start",
    "build": "npm install && cd react-client && npm install && npm run build"
  },
  "dependencies": {
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.3",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "json": "^9.0.6",
    "jsonwebtoken": "^8.3.0",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.1",
    "passport-local": "^1.0.0",
    "sqlite3": "^4.0.4",
    "ws": "^4.1.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.3"
  }
}
